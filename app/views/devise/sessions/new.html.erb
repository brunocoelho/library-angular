<h2>Please login</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div>
    <%= f.label :email %><br/>
    <%= f.email_field :email, autofocus: true, placeholder: 'bruno@gmail.com' %>
  </div>

  <div>
    <%= f.label :password %><br/>
    <%= f.password_field :password, placeholder: '12345678' %>
  </div>

  <div><%= f.submit 'Sign in', class: 'btn btn-primary' %></div>
<% end %>
