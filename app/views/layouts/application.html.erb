<!DOCTYPE html>
<html lang="en" ng-app="LibraryApp">
  <head>
    <title>Library</title>
    <%= stylesheet_link_tag "application", media: "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <div class="container-fluid" id="topbar">
      <div class="row-fluid" ng-controller="ApplicationCtrl">
        <div class="span2" >
          <!--Sidebar content-->

          <form class="form-search">
            <input type="text" class="input-medium search-query" placeholder="Search">
            <!--<button type="submit" class="btn">Search</button>-->
          </form>

          <p>Current User #INICIO<p>
          {{current_user.id}}
          {{current_user.name}}
          {{current_user.email}}
          <p>Current User #FIM<p>

        </div>

        <div class="span9">
          <!--Body content-->
          <div class="login" style="margin: auto; width: 40%;">
            <%= yield %>
          </div>
          <% if user_signed_in? %>
            <div ng-view></div>
          <% end %>
        </div>

        <div class="span1">
          <!--Logout content-->
          <% if user_signed_in? %>
            <%= link_to 'Logout', destroy_user_session_path, class: 'logout',
              method: :delete, title: 'Fazer logout', :'data-placement' => "below" %>
          <% end %>
        </div>
      </div>
    </div>

  </body>
</html>
