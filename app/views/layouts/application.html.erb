<!DOCTYPE html>
<html>
<head>
  <title>Library</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="span1">
          <% if user_signed_in? %>
            <%= link_to 'Logout', destroy_user_session_path, class: 'logout',
              method: :delete, title: 'Fazer logout', :'data-placement' => "below" %>
          <% else %>
            <%= link_to 'Login', new_user_session_path %>
          <% end %>

        </div>


<%= yield %>

</body>
</html>
